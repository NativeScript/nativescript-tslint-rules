{
  "name": "@nativescript/tslint-rules",
  "version": "0.0.1",
  "description": "A set of TSLint rules for NativeScript projects.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "NativeScript",
    "typescript",
    "tslint"
  ],
  "author": {
    "name": "NativeScript Team"
  },
  "contributors": [
    "Stanimira Vlaeva <Stanimira.Vlaeva@progress.com>"
  ],
  "license": "Apache-2.0",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "tslint --project ./tsconfig.json -c ./tslint.json 'src/**/*.ts'",
    "lint:test": "tslint --project ./tsconfig.json -c ./tslint.json 'test/**/*.ts'",
    "lint:fix": "npm run lint:src:fix && npm run lint:test:fix",
    "lint:src:fix": "tslint --project ./tsconfig.json -c ./tslint.json 'src/**/*.ts' --fix",
    "lint:test:fix": "tslint --project ./tsconfig.json -c ./tslint.json 'test/**/*.ts' --fix",
    "test": "jest",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --coverage false",
    "prettier": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "prepublishOnly": "npm run build && npm run lint && npm run test"
  },
  "dependencies": {
    "@phenomnomnominal/tsquery": "~3.0.0"
  },
  "peerDependencies": {
    "tslint": "^5.13.0",
    "typescript": "^3.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "11.13.4",
    "husky": "^1.3.1",
    "jest": "^24.4.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.0",
    "typescript": "^3.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**"
    ],
    "coverageDirectory": "<rootDir>/reports/coverage",
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.spec\\.ts$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "git add"
    ],
    "*.{json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
